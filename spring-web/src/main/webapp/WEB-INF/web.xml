	<error-page>  
	    <exception-type>java.lang.Throwable</exception-type>  
	    <location>/WEB-INF/error.html</location>
	</error-page>  
	<error-page>  
	    <error-code>500</error-code>  
	    <location>/WEB-INF/error.html</location>
	</error-page>  
	<error-page>  
	    <error-code>404</error-code>  
	    <location>/WEB-INF/error.html</location>
	</error-page>

	<session-config>
